<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/categoryCard"
    style="@style/meal_horizontal_list_item"
    android:layout_width="@dimen/meal_horizontal_list_item_width"
    android:layout_height="@dimen/meal_horizontal_list_item_height"
    android:layout_margin="@dimen/category_list_item_margin">

    <ImageView
        android:id="@+id/categoryImage"
        android:layout_width="@dimen/meal_horizontal_list_item_image_width"
        android:layout_height="@dimen/meal_horizontal_list_item_image_height"
        android:layout_gravity="center"
        android:contentDescription="@string/category_image"
        android:src="@drawable/beef" />

</androidx.cardview.widget.CardView>