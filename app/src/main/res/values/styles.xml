<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="meal_horizontal_list_item">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="cardBackgroundColor">@color/blue_light</item>
    </style>
    <style name="meal_horizontal_list_item.active">
        <item name="cardBackgroundColor">@color/pink</item>
    </style>
    <style name="meal_horizontal_list_item_image">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>
    <style name="meal_vertical_list_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">118dp</item>
        <item name="android:padding">12dp</item>
        <item name="background">@color/white</item>
    </style>
    <style name="meal_vertical_list_item_image">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginEnd">6dp</item>
    </style>
    <style name="meal_vertical_list_item_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical|center</item>
    </style>
</resources>